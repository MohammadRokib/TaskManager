@using TaskManager.Models.ViewModels;
@model VerifyViewModel;

@{
	ViewData["Title"] = "Verify Account";
	Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<div class="account-container">
	<div class="account-box">
		<h2 class="text-center mb-4">Verify Account</h2>
		<form asp-action="VerifyEmail" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3">
				<label asp-for="UserName" class="form-label"></label>
				<input asp-for="UserName" class="form-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>

			<input type="submit" value="Verify" class="btn btn-success w-100 p-2" />
			<p class="text-center mt-2">
				<a asp-controller="Account" asp-action="Login" class="text-decoration-none">Back</a>
			</p>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}
}